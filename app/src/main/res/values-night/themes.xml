<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CalenderApp" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/secondary_second</item>
        <item name="colorPrimaryDark">@color/secondary_first</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CalenderApp.Button</item>
        <item name="textInputStyle">@style/Widget.CalenderApp.TextInputLayout</item>
        <item name="editTextStyle">@style/Widget.CalenderApp.EditText</item>

    </style>


    <style name="Widget.CalenderApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="Widget.CalenderApp.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.CalenderApp.Button" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Wert zwischen 0% und 50% fÃ¼r Ovalform -->
    </style>
</resources>